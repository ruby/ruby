update-known-errors:
	errno --list | \
	$(BASERUBY) -nl -e 'BEGIN {errs = {}}' \
	-e '/^(E[A-Z_0-9]+)(?: +(?:\d+ +)?(.+))?/ =~ $$_ && errs[$$1] ||= $$2' \
	-e 'END {' \
	-e   'errs.delete("ELAST")' \
	-e   'errs = errs.sort' \
	-e   'errs << ["ELAST", "Largest errno"]' \
	-e   'errs.each {|e,d| puts sprintf("%-15s %s", e, d).strip}' \
	-e '}' \
	$(srcdir)/defs/known_errors.def - | \
	$(IFCHANGE) $(srcdir)/defs/known_errors.def -

