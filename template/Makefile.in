	    > ruby.tmp.pc
	$(Q)pkg_config=${PKG_CONFIG} && PKG_CONFIG_PATH=. $${pkg_config:-:} --print-errors ruby.tmp
	$(Q)$(MV) -f ruby.tmp.pc $(ruby_pc)

